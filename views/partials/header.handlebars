<header>
  <div id="cabecalho" class="d-flex">
    <h1 class="flex-grow-1"><a href="/">iNote</a></h1>
    <figure>
      <div class="btn-group p-0">
        <button type="button" class="border-0 bg-transparent text-light"
          data-toggle="dropdown">
          <a href="">
          <img src="./source/img/entrar.png">
          <figcaption>Entrar</figcaption>
          </a>
        </button>
        <div class="dropdown-menu dropdown-menu-right">
          <form class="px-3 py-2" action="/signin" method="Post">
            <div class="form-group mt-5">
              <input type="text" class="form-control" name="username" placeholder="Username">
            </div>
            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Senha">
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </figure>
    <figure class="ml-3">
      <a href="/register">
        <img src="./source/img/add-user.png">
        <figcaption>Cadastrar</figcaption>
      </a>
    </figure>
  </div>
</header>