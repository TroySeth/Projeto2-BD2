<header>
  <div id="cabecalho" class="d-flex">
    <h1 class="flex-grow-1"><a href="/">iNote</a></h1>
  </div>
</header>
<div class="container">
  <h1 class="mt-5 text-center">
    Registrar
  </h1>
  <div class="col-md-6 mx-auto mb-5">
    <form action="/create" method="Post">
      <div class="mb-2">
        <label>Nome</label>
        <input type="text" name="name" class="form-control">
      </div>
      <div class="mb-2">
        <label>Username</label>
        <input type="text" name="username" class="form-control">
      </div>
      <div class="mb-2">
        <label>Email</label>
        <input type="text" name="email" class="form-control">
      </div>
      <div class="mb-2">
        <label>Senha</label>
        <input type="text" name="password" class="form-control">
      </div>
      <button type="submit" class="btn btn-primary d-flex mr-auto ml-auto mt-4">Registrar</button>
    </form>
  </div>
</div>